			<script type="text/javascript">
				function initPage(){
					showfixedfooter = 1;
					if (isDesktop()){
						showFooter(1);
						loopGallery();
					} else {
						$('.gallery_item_mask, .gallery_prev, .gallery_next').remove();						
						var	carousel,
							el,
							i,
							page,
							slides = [
																		''															];
							
						carousel = new SwipeView('.article_image_gallery', {
							numberOfPages: slides.length,
							hastyPageFlip: true
						});

						// Load initial data
						for (i=0; i<3; i++) {
							page = i==0 ? slides.length-1 : i-1;
							el = document.createElement('div');
							el.innerHTML = slides[page];
							carousel.masterPages[i].appendChild(el);
						}

						carousel.onFlip(function () {
							var el,
								upcoming,
								i;

							for (i=0; i<3; i++) {
								upcoming = carousel.masterPages[i].dataset.upcomingPageIndex;
								if (upcoming != carousel.masterPages[i].dataset.pageIndex) {
									el = carousel.masterPages[i].querySelector('div');
									el.innerHTML = slides[upcoming];
								}
							}
						});
					}
				}
				function loopGallery(){
					var wrapper = '#gallery1';
					var item = '.gallery_item_mask';
					var iteminner = '.gallery_item';
					var prev = '.gallery_prev';
					var next = '.gallery_next';
					var selectedclass = 'g_selected';
					var selector = $(wrapper+' '+item);
					var items = selector.length;
					var doingG = 0;
					
					selector.each(function(index){
						$(this).addClass('g_item'+(index+1));
						$(this).attr('data-id', (index+1));
					});
					
					$(wrapper+' '+item).css('left','100%');
					$(wrapper+' '+item+':first').addClass(selectedclass);
					$(wrapper+' '+item+':first').css('left','0%');
					$(wrapper+' '+item+':first').next().css('left','15%');
					$(wrapper+' '+item+':last').css('left','-15%');
					
					$(wrapper+' '+item).css('z-index','5');
					$(wrapper+' .'+selectedclass).css('z-index','15');
					
					// prev click
					$(prev).unbind().on('click', function(){
						if (doingG == 0){
							doingG = 1;
							var selectedid = $('.'+selectedclass).attr('data-id');
							var selectedidprev = parseInt(selectedid)-1;
							if (selectedidprev == 0) {
								selectedidprev = items;
							}
							var selectedidnext = parseInt(selectedid)+1;
							if (selectedidnext > items) {
								selectedidnext = 1;
							}
							$(wrapper+' .g_item'+selectedidprev).css('z-index','7');
							
							$('.'+selectedclass).animate({
								left:'100%'
							}, 500, 'easeOutQuad', function(){
								//
							});
							$('.'+selectedclass+' '+iteminner).animate({
								left:'-85%'
							}, 500, 'easeOutQuad', function(){
								$(this).css('left','0%');
							});
							$(wrapper+' .g_item'+selectedidprev).animate({
								left:'0%'
							}, 500, 'easeOutQuad', function(){
								//
								$('.'+selectedclass).removeClass(selectedclass);
								$(wrapper+' .g_item'+selectedidprev).addClass(selectedclass);
								$(wrapper+' '+item).css('z-index','5');
								$(wrapper+' .'+selectedclass).css('z-index','15');
								var newprev = selectedidprev-1;
								if (newprev == 0){
									newprev = items;
								}
								var newnext = selectedidprev+1;
								if (newnext > items){
									newnext = 1;
								}
								$(wrapper+' '+item).css('left','100%');
								$(wrapper+' .'+selectedclass).css('left','0');
								$(wrapper+' .g_item'+newprev).css('left','-15%');
								$(wrapper+' .g_item'+newnext).css('left','15%');
								doingG = 0;
							});
						}
					});
					
					// next click
					$(next).unbind().on('click', function(){
						if (doingG == 0){
							doingG = 1;
							var selectedid = $('.'+selectedclass).attr('data-id');
							var selectedidprev = parseInt(selectedid)-1;
							if (selectedidprev == 0) {
								selectedidprev = items;
							}
							var selectedidnext = parseInt(selectedid)+1;
							if (selectedidnext > items) {
								selectedidnext = 1;
							}
							$(wrapper+' .g_item'+selectedidnext).css('z-index','7');
							
							$('.'+selectedclass).animate({
								left:'-100%'
							}, 500, 'easeOutQuad', function(){
								//
							});
							$('.'+selectedclass+' '+iteminner).animate({
								left:'85%'
							}, 500, 'easeOutQuad', function(){
								$(this).css('left','0%');
							});
							$(wrapper+' .g_item'+selectedidnext).animate({
								left:'0%'
							}, 500, 'easeOutQuad', function(){
								//
								$('.'+selectedclass).removeClass(selectedclass);
								$(wrapper+' .g_item'+selectedidnext).addClass(selectedclass);
								$(wrapper+' '+item).css('z-index','5');
								$(wrapper+' .'+selectedclass).css('z-index','15');
								var newprev = selectedidnext-1;
								if (newprev == 0){
									newprev = items;
								}
								var newnext = selectedidnext+1;
								if (newnext > items){
									newnext = 1;
								}
								$(wrapper+' '+item).css('left','100%');
								$(wrapper+' .'+selectedclass).css('left','0');
								$(wrapper+' .g_item'+newprev).css('left','-15%');
								$(wrapper+' .g_item'+newnext).css('left','15%');
								doingG = 0;
							});
						}
					});
					
					// overlay height
					$('.bontent_block_labs_ovl').css('min-height', (windowheight-$('.header').height()-100));
				}
